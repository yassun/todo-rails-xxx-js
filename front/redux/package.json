{
  "name": "todo-rails-xxx-js",
  "version": "1.0.0",
  "dependencies": {
    "babel-polyfill": "^6.20.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "redux": "^3.6.0",
    "redux-actions": "^1.2.0",
    "redux-logger": "^2.7.4",
    "redux-saga": "^0.14.3"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.6",
    "browserify": "^13.3.0",
    "watchify": "^3.8.0"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "start": "npm run server & npm run watchify",
    "build": "npm run browserify",
    "server": "browser-sync start -s -f 'public/redux/index.html, public/redux/bundle.js' --no-notify --no-open --no-ghost-mode",
    "browserify": "browserify -e app/entry.js -o public/redux/bundle.js -v",
    "watchify": "watchify -e app/entry.js -o public/redux/bundle.js -v -w"
  }
}
